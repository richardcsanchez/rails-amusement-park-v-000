<%= form_for(@attraction) do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %>

  <%= f.label :min_height, "Height Requirement (in inches)" %><br>
  <%= f.text_field :min_height %>

  <%= f.label :happiness_rating, "How fun is it? (1-5)" %><br>
  <%= f.text_field :happiness_rating %>

  <%= f.label :nausea_rating, "How nauseating is it? (1-5)"%><br>
  <%= f.text_field :nausea_rating %>

  <%= f.label :tickets, "How many tickets do you have?"%><br>
  <%= f.text_field :tickets%>

  <%= f.submit %>

  <%end%>
